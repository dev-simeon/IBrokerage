@page
@model IBrokerage.Pages.RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito&display=swap">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/Portal.styles.css" />
    <title>@ViewData["Title"] - iBrokerage</title>
</head>

<body class="vh-100 bg-light">
    <div class="d-flex h-100 align-items-center justify-content-center">
        <main class="bg-white rounded-3 shadow p-5">
            <header class="mb-4">
                <h3 class="text-center">iBrokerage</h3>
                <p class="text-center">Create your account</p>
            </header>
            <form method="post" class="d-flex flex-column">
                <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
                <div class="d-flex flex-column gap-3">
                    <div class="d-flex flex-column gap-2">
                        <input type="text" class="form-control" placeholder="first name" asp-for="FirstName" required />
                        <input type="text" class="form-control" placeholder="last name" asp-for="LastName" required />
                        <input type="email" class="form-control" placeholder="email" asp-for="Email" required />
                        <input type="text" class="form-control" placeholder="phone number" asp-for="PhoneNumber" required />
                        <input type="text" class="form-control" placeholder="address" asp-for="Address" required />
                        <input type="password" class="form-control" placeholder="password" asp-for="Password" required />
                        <input type="password" class="form-control" placeholder="confirm password"
                               asp-for="ConfirmPassword" required />
                    </div>

                    <div class="d-flex justify-content-between">
                        <div class="d-flex align-items-center gap-1">
                            <p class="mb-0">already have an account <span><a class="text-decoration-none" asp-page="Index">Login</a></span></p>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-dark">Create Account</button>
                </div>
            </form>
        </main>
    </div>
</body>
</html>