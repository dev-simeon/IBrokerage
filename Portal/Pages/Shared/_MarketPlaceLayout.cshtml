<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/united/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/Gibs.Portal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>@ViewBag.Title - IBrokerage</title>
    <style>html {font-size: 95%;} body::before {display: block;content: '';height: 57px;} .navbar {z-index:100;}</style>
</head>
<body class="vh-100 bg-light">
    <nav class="navbar position-fixed top-0 bg-white shadow start-0 end-0">
        <div class="container justify-content-between">
            <div class="d-flex justify-content-between gap-lg-5 flex-fill flex-lg-grow-0 flex-lg-shrink-0">
                <a class="navbar-brand text-dark me-0" asp-area="" asp-page="/Index">iBrokerage</a>

                <button type="button" class="btn d-block d-lg-none nav-btn" data-bs-toggle="offcanvas"
                        data-bs-target="#navmenu" aria-controls="offcanvasExample">
                    <span>
                        <svg width="16" height="15" xmlns="http://www.w3.org/2000/svg">
                            <path d="M16 12v3H0v-3h16Zm0-6v3H0V6h16Zm0-6v3H0V0h16Z" fill="#333333" fill-rule="evenodd" />
                        </svg>
                    </span>
                </button>

                <ul id="nav" class="navbar-nav flex-row gap-3 d-none d-lg-flex">
                    <li class="nav-item">
                        <a class="nav-link text-dark active front-page" href="#home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark front-page" href="#aboutUs">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark front-page" href="#services">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark front-page" href="#testimonials">Testimonials</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark front-page" href="#faq">Faq</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark front-page" href="#contact">Contact</a>
                    </li>
                </ul>
            </div>

            <div class="d-flex gap-3 d-none d-lg-flex">
                <a class="btn btn-outline-dark" href="https://ibrokerage.africa/Login">
                    Login
                </a>
                <a class="btn btn-dark" href="https://ibrokerage.africa/Register">
                    Sign Up
                </a>
            </div>
        </div>
    </nav>
    <div class="container py-4">
        @RenderBody()
    </div>
</body>
</html>
