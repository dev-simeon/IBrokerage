<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/united/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/portal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>@ViewData["Title"] - iBrokerage</title>
</head>
<body class="vh-100">
    <nav class="sb">
        <header class="sb-header">
            <a href="#">
                <span class="sb-brand      text-white">iBrokerage</span>
                <span class="sb-brand-icon text-white">iB</span>
            </a>
        </header>

        <ul class="sb-menu flex-column">
            <li class="sb-group">NAVIGATION</li>
            <li class="active open">
                <a href="#">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
                <ul class="flex-column">
                    <li>
                        <a href="#">
                            <span>Analytics</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span>Ecommerce</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span>Projects</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span>CRM</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span>E-Wallet</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="sb-group">APPS</li>
            <li>
                <a href="/Insured">
                    <i class="bi bi-people"></i>
                    <span>Insured</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-file-earmark"></i>
                    <span>Policies</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-file-check"></i>
                    <span>Certificates</span>
                </a>
            </li>
        </ul>
    </nav>

    <main role="main" class="pb-3 h-100">
        <header class="navbar bg-primary-subtle">
            <div class="container-fluid">
                <button class="btn btn-toolbar" type="button" data-sidebar-toggle="toggle">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="input-group w-50">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input class="form-control" type="text" placeholder="search...">
                    <button class="btn btn-primary">Search</button>
                </div>
            </div>
        </header>
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const buttons = document.querySelectorAll('[data-sidebar-toggle]');
            buttons.forEach(e => {
                e.addEventListener('click', () => {
                    document.querySelector('body').classList.toggle('override');
                })
            });

            const dropdowns = document.querySelectorAll('ul.sb-menu li:has(ul)');
            dropdowns.forEach(e => {
                e.addEventListener('click', () => {
                    e.classList.toggle('open');
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>