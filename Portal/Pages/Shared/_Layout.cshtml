<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/united/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/portal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>@ViewData["Title"] - iBrokerage</title>
</head>
<body class="vh-100">
    <nav class="sb">
        <header class="sb-header">
            <a href="#">
                <span class="sb-brand      text-white">iBrokerage</span>
                <span class="sb-brand-icon text-white">iB</span>
            </a>
        </header>

        <ul class="sb-menu flex-column">
            <li class="sb-group">NAVIGATION</li>
            <li class="active open">
                <a href="#">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
                <ul class="flex-column">
                    <li>
                        <a href="#">
                            <span>Analytics</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span>Ecommerce</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span>Projects</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span>CRM</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span>E-Wallet</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="sb-group">APPS</li>
            <li>
                <a href="/Insured">
                    <i class="bi bi-people"></i>
                    <span>Insured</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-file-earmark"></i>
                    <span>Policies</span>
                </a>
            </li class="nav-item">
            <li class="nav-item">
                <a href="#" class="nav-link d-flex align-items-center">
                    <i class="bi bi-file-check nav-icon"></i>
                    <span class="nav-text">Certificates</span>
                </a>
            </li>
        </ul>
    </nav>

    <main role="main" class="pb-3 h-100">
        <div class="d-flex bg-white py-3 px-4 shadow-sm border-bottom">
            <div class="d-flex align-items-center gap-4">
                <div class="hamburger d-none d-md-block">
                    <i class="bi bi-list fs-3 fw-bold"></i>
                </div>
                <div class="hamburger d-md-none" data-bs-toggle="offcanvas" data-bs-target="#sidebar">
                    <i class="bi bi-list fs-5"></i>
                </div>
                <div class="d-flex align-items-center">
                    <div class="input-group">
                      <span class="input-group-text border-0" id="search"><i class="bi bi-search"></i></span>
                      <input type="text" class="form-control search" placeholder="search..." aria-label="search" aria-describedby="search">
                    </div>
                     <button class="btn btn-primary shadow py-2 search-btn">Search</button>
                </div>
            </div>
        </div>


        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const buttons = document.querySelectorAll('[data-sidebar-toggle]');
            buttons.forEach(e => {
                e.addEventListener('click', () => {
                    document.querySelector('body').classList.toggle('override');
                })
            });

            const dropdowns = document.querySelectorAll('ul.sb-menu li:has(ul)');
            dropdowns.forEach(e => {
                e.addEventListener('click', () => {
                    e.classList.toggle('open');
                });
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>