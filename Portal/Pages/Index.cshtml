@page
@model iBrokerage.Pages.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito&display=swap">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/Portal.styles.css" />
    <title>Login - iBrokerage</title>
</head>

<body class="vh-100 bg-light">
    <div class="d-flex h-100 align-items-center justify-content-center">
        <main class="bg-white rounded-3 shadow p-5">
            <header class="mb-4">
                <h3 class="text-center">iBrokerage</h3>
                <p class="text-center">Login to your account</p>
            </header>
            <form method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="d-flex flex-column gap-3">
                    <input class="form-control" type="email" placeholder="email" asp-for="Email" />
                    <input class="form-control" type="password" placeholder="password" asp-for="Password" required />
                    <a class="text-decoration-none" asp-page="/Dashboard">forgot password?</a>
                    <button type="submit" class="btn btn-dark">Login</button>
                </div>
                <div class="mt-3 text-center">
                    <a class="text-decoration-none" asp-page="SignUp">Create New Account</a>
                </div>
            </form>
        </main>
    </div>
</body>
</html>