@page
@model Gibs.Portal.Pages.Marketplace.GetQuoteModel
@{
    ViewData["Title"] = "Get A Quote";
    Layout = "_MarketPlaceLayout";
}

<section class="d-flex flex-column gap-4">
    <h3 class="mb-0">Get A Quote</h3>
    <div class="d-flex gap-4">
        <div class="card" style="width: 30%">
            <h5 class="card-header">Third Party Motor Insurance</h5>
            <img src="~/images/lance-asper-50cIn5ELxLo-unsplash.jpg" class="img-fluid" />
            <div class="card-body d-flex flex-column gap-1">
                <h5 class="card-title">What we cover:</h5>
                <p class="card-text mb-0 d-flex align-items-center gap-2">
                    <i class="bi bi-check-circle-fill"></i>
                    Third Party property damage up to ₦3,000,000
                </p>
                <p class="card-text mb-0 d-flex gap-2">
                    <i class="bi bi-check-circle-fill"></i>
                    Unlimited (but reasonable) liability for death / bodily injury to third parties.
                </p>
                <p class="card-text mb-0 d-flex align-items-center gap-2">
                    <i class="bi bi-check-circle-fill"></i>
                    Excess buy back covered
                </p>
                <p class="card-text mb-0 d-flex gap-2">
                    <i class="bi bi-check-circle-fill"></i>
                    Theft of the Insured Vehicle, Strike Riot and Civil Commotion and Fire Damage covered
                </p>
                <p class="card-text mb-0 d-flex align-items-center gap-2">
                    <i class="bi bi-check-circle-fill"></i>
                    Third Party property damage up to ₦3,000,000
                </p>
            </div>
        </div>

        <div class="bg-white p-4 rounded-3 flex-fill d-flex flex-column gap-3">
            <div>
                <h3 class="mb-2 fw-bold">Personal Information</h3>
                <p class="mb-0">Hello, let’s get your personal details</p>
            </div>
            
            <form class="d-flex flex-column gap-4">
                <div>
                    <div class="d-flex align-items-center gap-5 py-3 border border-start-0 border-end-0">
                        <label class="form-label mb-0">Name</label>
                        <div class="d-flex align-items-center gap-3 input-wrapper">
                            <input class="form-control" type="text" />
                            <input class="form-control" type="text" />
                        </div>
                    </div>

                    <div class="d-flex align-items-center gap-5 py-3 border border-start-0 border-end-0">
                        <label class="form-label mb-0">Email Address</label>
                        <input class="form-control" type="email" />
                    </div>

                    <div class="d-flex align-items-center gap-5 py-3 border border-start-0 border-end-0">
                        <label class="form-label mb-0">Phone Number</label>
                        <input class="form-control" type="number" />
                    </div>
                </div>

                <div>
                    <button class="btn btn-secondary">Back</button>
                    <button class="btn btn-primary">Next</button>
                </div>

            </form>
        </div>
    </div>

    
</section>