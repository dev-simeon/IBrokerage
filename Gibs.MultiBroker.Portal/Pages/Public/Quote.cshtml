@page
@model GetQuoteModel
@{
    ViewData["Title"] = "Buy Online";
}

<main class="d-flex gap-4">
    <card style="width: 30%">
        <header>Third Party Motor Insurance</header>
        <img class="img-fluid" src="~/images/lance-asper-50cIn5ELxLo-unsplash.jpg" />
        <body>
            <h5>What we cover</h5>
            <p class="d-flex gap-2">
                <i class="bi bi-check-circle-fill text-success"></i>
                Third Party property damage up to ₦3,000,000
            </p>
            <p class="d-flex gap-2">
                <i class="bi bi-check-circle-fill text-success"></i>
                Unlimited (but reasonable) liability for death / bodily injury to third parties.
            </p>
            <p class="d-flex gap-2">
                <i class="bi bi-check-circle-fill text-success"></i>
                Excess buy back covered
            </p>
            <p class="d-flex gap-2">
                <i class="bi bi-check-circle-fill text-success"></i>
                Theft of the Insured Vehicle, Strike Riot and Civil Commotion and Fire Damage covered
            </p>
        </body>
    </card>

    <form style="width: 70%">
        <card class="h-100">
            <body>
                <h3>Personal Information</h3>
                <p>Hello, let’s get your personal details</p>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="inputEmail4" class="form-label">Email</label>
                        <input type="email" class="form-control" id="inputEmail4">
                    </div>
                    <div class="col-md-6">
                        <label for="inputPassword4" class="form-label">Password</label>
                        <input type="password" class="form-control" id="inputPassword4">
                    </div>
                    <div class="col-12">
                        <label for="inputAddress" class="form-label">Address</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                    </div>
                    <div class="col-12">
                        <label for="inputAddress2" class="form-label">Address 2</label>
                        <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
                    </div>
                    <div class="col-md-6">
                        <label for="inputCity" class="form-label">City</label>
                        <input type="text" class="form-control" id="inputCity">
                    </div>
                    <div class="col-md-4">
                        <label for="inputState" class="form-label">State</label>
                        <select id="inputState" class="form-select">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="inputZip" class="form-label">Zip</label>
                        <input type="text" class="form-control" id="inputZip">
                    </div>
                </div>
            </body>
            <footer class="gap-2">
                <button class="btn btn-secondary">Back</button>
                <button class="btn btn-primary">Next</button>
            </footer>
        </card>
    </form>
</main>
